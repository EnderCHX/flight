<!DOCTYPE html>
<head>
    <title>我的</title>
    <script src="/js/my.js"></script>
    <script src="https://cdn.bootcss.com/blueimp-md5/2.12.0/js/md5.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/my.css">
</head>
<body>
    <h1>你好：{{username}}</h1>
    <div>
        <p>我的订单</p>
        <ul>
        {% for i in pay_list %}
        <li>航班：<label id="num_{{i.2}}">{{i.0}}</label>，数量：{{i.1}}，时间：{{i.2}} <input type="button" value="取消订单" onclick="drop_pay({{i.2}})"> </li>
        {% endfor %}
        </ul>
    </div>
    <div>
        <p>账户信息</p>
        <input type="text" placeholder="{{uid}}" value="{{uid}}" id="uid" readonly class="user_info" autocomplete="off">
        <input type="text" placeholder="{{username}}" value="{{username}}" id="username" class="user_info" autocomplete="off">
        <input type="password" placeholder="旧密码" id="old_password" class="user_info" autocomplete="off">
        <input type="password" placeholder="新密码" id="new_password" class="user_info" autocomplete="off">
        <input type="password" placeholder="重复密码" id="re_new_password" class="user_info" autocomplete="off">
        <input type="button" value="修改" class="user_info" >
    </div>
</body>